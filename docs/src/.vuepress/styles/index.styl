@font-face {
  font-family: 'IBM Plex Serif';
  font-style: normal;
  src: url('/fonts/IBMPlexSerif-Medium.woff') format('woff'), url('/fonts/IBMPlexSerif-Medium.woff2')  format('woff2');
  font-weight: 500;
}

@font-face {
  font-family: 'IBM Plex Mono';
  font-style: normal;
  src: url('fonts/IBMPlexMono-Regular.woff') format('woff'), url('fonts/IBMPlexMono-Regular.woff2')  format('woff2');
  font-weight: 400;
}

body {
  font-family: 'IBM Plex Serif', serif;
}

html,
.theme-container,
.navbar,
.page,
.sidebar,
.home {
  background-color: #151515;
  border-color: $badgeTipColor
}

.theme-container,
.home {
  display: flex;
}

.theme-container {
  height: 100vh;
}

.home {
  flex: 1;
  display: flex !important;
  flex-direction: column;
}

.home .footer {
  border-color: $badgeTipColor !important;
}


.navbar > div.links {
  background-color: #151515;
}

.hero {
  flex: 1;
  flex-direction: column;
  margin-top: 15%;
}



 h1 {
  font-size: 1.5em;
 }

 h2 {
  font-size: 1.2em;
 }

 h3 {
  font-size: 1em;
 }

 