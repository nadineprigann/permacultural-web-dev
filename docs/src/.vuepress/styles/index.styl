body {
  font-family: Inter, sans-serif;
}
  
html,
.theme-container,
.navbar,
.page,
.sidebar,
.home {
  background-color: #151515;
  border-color: $badgeTipColor
}

.theme-container,
.home {
  display: flex;
}

.theme-container {
  height: 100vh;
}

.home {
  flex: 1;
  display: flex !important;
  flex-direction: column;
}

.home .footer {
  border-color: $badgeTipColor !important;
}


.navbar > div.links {
  background-color: #151515;
}

.hero {
  flex: 1;
  flex-direction: column;
  margin-top: 15%;
}



 h1 {
