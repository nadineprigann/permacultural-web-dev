@font-face {
  font-family: 'Inter';
  font-style: normal;
  src: url('/fonts/Inter-Medium.woff') format('woff'), url('/fonts/Inter-Medium.woff2')  format('woff2');
  font-weight: 500;
}

@font-face {
  font-family: 'IBM Plex Mono';
  font-style: normal;
  src: url('/fonts/IBMPlexMono-Regular.woff') format('woff'), url('/fonts/IBMPlexMono-Regular.woff2')  format('woff2');
  font-weight: 400;
}

body {
  font-family: 'Inter', sans-serif;  

  em {
    color: $textColor;
  }
}

table {
  margin-top: 2em;
  margin-bottom: 4em;

  tr {
    background-color: transparent !important;
  }

  tr,
  th,
  td {
    border: none;
  }
  
  th:not(:last-of-type),
  td:not(:last-of-type) {
    border-right: $textColor 1px solid;
  }

   td {
    border-bottom: $textColor 1px dashed;
  }

  th {
    border-bottom: $textColor 1px solid;
  }
}

html,
.theme-container,
.navbar,
.page,
.sidebar,
.home {
  background-color: $bgColor;
  border-color: $borderColor;
}

.theme-container,
.home {
  display: flex;
}

.theme-container {
  height: 100vh;
}

.home {
  flex: 1;
  display: flex !important;
  flex-direction: column;
}

.home .hero .description {
  color: $textColor !important;
}

.home .footer {
  border-color: $badgeTipColor !important;
}


.navbar > div.links {
  background-color: $bgColor;
}

.hero {
  flex: 1;
  flex-direction: column;
  margin-top: 15%;
}

a:focus-visible {
  outline: none;
  text-shadow: 0.15em 0.15em 1em $accentColor;
}

h1 {
  font-size: 1.5em;
}

h2 {
  font-size: 1.2em;
}

h3 {
  font-size: 1em;
}

.page {
  overflow-x: hidden;
}


.container {
  > img {
    max-width: unset !important;
  }
}

.objectives {
  text-align: center;
  font-weight: bold;
  color: $accentColor;
  padding: 5em;
}

 